<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84CCD8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ensicaen.ecole.ludistreet.activities.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/profile_identifiant" />

            <EditText
                android:id="@+id/editText_id"
                android:layout_height="5dp"
                android:layout_width="5dp" />

            <TextView
                android:id="@+id/textView_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:inputType="textPersonName"
                android:text="I D E N T I F I A N T"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editText_username"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:inputType="none"
                android:background="@drawable/rounded_edit_text"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:ems="10"
                android:fontFamily="Segoe UI"
                android:hint="@string/login_id"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:inputType="textPersonName"
                android:text="P O I N T S"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editText_points"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edit_text"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="Segoe UI"
                android:hint="POINTS"
                android:inputType="none"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_informations1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:inputType="textPersonName"
                android:text="M O D I F I C A T I O N  D E  V O S"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/textView_informations2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:inputType="textPersonName"
                android:text="I N F O R M A T I O N S"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal|center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_horizontal|center_vertical">

                    <EditText
                        android:id="@+id/editText_lastname"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rounded_edit_text_white"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:fontFamily="Segoe UI"
                        android:hint="NOM"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_firstname"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_edit_text_white"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:fontFamily="Segoe UI"
                        android:hint="PRENOM"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_edit_text_white"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:fontFamily="Segoe UI"
                    android:hint="EMAIL"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_horizontal|center_vertical">

                    <EditText
                        android:id="@+id/editText_password"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_edit_text_white"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:fontFamily="Segoe UI"
                        android:hint="MOT DE PASSE"
                        android:inputType="textPassword"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_password_confirm"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_edit_text_white"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:fontFamily="Segoe UI"
                        android:hint="VERIFICATION"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/save_button"
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    app:srcCompat="@drawable/profile_button_save" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>